@model Hotel_Managements_System.Models.Hotel
@*   @Model HotelDB *@

@{
}


<div class="container">
    <form asp-action="Update" method="post">

        <div class="form-group visually-hidden">
            <label for="id"> id:</label>
            <input id="id" name="id" type="text" class="form-control" asp-for="@Model.id" disabled />
            <span class="text-danger" asp-validation-for="id"></span>

        </div>


        <div class="form-group">
            <label for="name">  Name:</label>
            <input id="name" name="name" type="text" class="form-control required" asp-for="@Model.name" required />
            <span class="text-danger" asp-validation-for="name"></span>

        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input id="address" name="address" type="text" class="form-control required" asp-for="@Model.address" required />
            <span class="text-danger" asp-validation-for="address"></span>

        </div>
        <div class="form-group">
            <label for="city"> City:</label>
            <input id="city" name="city" class="form-control required" asp-for="@Model.city" required />
             <span class="text-danger" asp-validation-for="city"></span>

        </div>


        <div class="form-group">
            <label for="phone"> phone:</label>
            <input id="phone" name="phone" class="form-control required" asp-for="@Model.phone" required />
             <span class="text-danger" asp-validation-for="phone"></span>

        </div>

        <div class="form-group visually-hidden">
            <label for="image"> Image:</label>
            <input id="image" name="image" class="form-control required" asp-for="@Model.image" required />
             <span class="text-danger" asp-validation-for="image"></span>

        </div>


        <div class="form-group">
            <label for="phone">email</label>
            <input required id="email" name="email" type="email" asp-for="@Model.email" class="form-control tel required" />
            <span class="text-danger" asp-validation-for="email"></span>

        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
