@model IEnumerable<Hotel_Managements_System.Models.Hotel>
    @{
        Layout = "~/Views/Shared/_LayoutShopping.cshtml";

        var hotel = ViewBag.hotel;
        int hotelid = hotel.id;
        var rooms = ViewBag.rooms;
    }

    <div class="room-body">
        <style>
            .hotel-body {
                padding: 20px;
            }

            .hotel-module {
                border: 1px solid #ddd;
                padding: 15px;
                margin-bottom: 20px;
            }

            .room-body {
                padding: 20px;
            }

            .room-module {
                border: 1px solid #ddd;
                padding: 15px;
                margin-bottom: 20px;
            }

            .room-image {
                max-width: 100%;
                height: auto;
            }

        </style>

        <div class="container">




        <div class="container mt-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <!-- Hotel Name -->
                        <div class="card-header">
                            <h2 class="card-title">@hotel.name</h2>
                        </div>

                        <!-- Body Information (Address, City, Country) -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="card-text"><strong>الحي:</strong> @hotel.address</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="card-text"><strong>المدينة:</strong> @hotel.city</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="card-text"><strong>رقم التواصل</strong> @hotel.phone</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="card-text"><strong>البريد:</strong> @hotel.email</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <img src="@hotel.image" alt="صورة الفندق" class="card-img-top">

                        </div>
                    </div>
                </div>

      
            </div>
        </div>
    
        </div>



           

        @if (rooms != null)
            @foreach (Rooms room in rooms)
            {

                <div class="container">
                    <div class="room-module">
                        <h2>نوع غرفة: @room.type</h2>


                        <p> @room.price ليلة</p>

                        <p>Feature: @room.feature</p>


                        <img alt="Room Image" src="@room.image" class="room-image">

                        <p><strong>رقم الغرفة:</strong> @room.room_number</p>


                      <a asp-action="RentForm" asp-route-id="@room.id" class="btn btn-primary">تاجير</a>

                    </div>


                </div>
            }
    </div>
    </div>
